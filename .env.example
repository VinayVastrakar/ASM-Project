# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Email Configuration (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-secure
JWT_EXPIRATION=43200000
JWT_REFRESH_EXPIRATION=172800000

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_ASSETS_MANAGEMENT_APP=DEBUG
SERVER_PORT=8080

# Optional: Redis Configuration (if using Redis)
REDIS_URL=redis://redis:6379

# Optional: Monitoring (if using Prometheus/Grafana)
PROMETHEUS_ENABLED=false
