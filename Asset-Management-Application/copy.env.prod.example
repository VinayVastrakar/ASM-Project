# ===========================================
# Asset Management Application - PRODUCTION .env Example
# Copy this file to .env on your server and fill real values
# ===========================================

# -------------------------------------------
# Spring Profile and Server
# -------------------------------------------
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# -------------------------------------------
# Database (Managed DB like RDS/Cloud SQL)
# -------------------------------------------
SPRING_DATASOURCE_URL=jdbc:postgresql://<db-host>:5432/<db-name>
SPRING_DATASOURCE_USERNAME=<db-username>
SPRING_DATASOURCE_PASSWORD=<db-password>

# -------------------------------------------
# Email (SMTP)
# -------------------------------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=<your-email>@gmail.com
MAIL_PASSWORD=<your-gmail-app-password>

# -------------------------------------------
# JWT
# -------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=<very-long-random-secret>
JWT_EXPIRATION=43200000
JWT_REFRESH_EXPIRATION=172800000

# -------------------------------------------
# Google OAuth
# -------------------------------------------
GOOGLE_CLIENT_ID=<your-google-client-id>.apps.googleusercontent.com

# -------------------------------------------
# Cloudinary (Optional - for image uploads)
# -------------------------------------------
# CLOUDINARY_CLOUD_NAME=<cloud-name>
# CLOUDINARY_API_KEY=<api-key>
# CLOUDINARY_API_SECRET=<api-secret>

# -------------------------------------------
# Twilio (Optional - for SMS)
# -------------------------------------------
# TWILIO_ACCOUNT_SID=<account-sid>
# TWILIO_AUTH_TOKEN=<auth-token>
# TWILIO_FROM_NUMBER=+10000000000

# -------------------------------------------
# File Upload Limits
# -------------------------------------------
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# -------------------------------------------
# Logging & CORS
# -------------------------------------------
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_ASSETS_MANAGEMENT_APP=INFO
# Set to your frontend origin(s)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
